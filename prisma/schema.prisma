generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



model User {
  id       String       @id @default(uuid())
  email    String   @unique
  password String
  username    String?
  whiteboards Whiteboard[]
}

model Whiteboard {
  id        String       @id @default(uuid())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User  @relation(fields: [userId], references: [id])
  userId    String
  drawings Drawing[]
}

model Drawing {
  id           String       @id @default(uuid())
  type         String
  data         Json      // JSON representation of the drawing data (e.g., coordinates for lines, shape properties, text content, etc.)
  color        String    // Color of the drawing
  thickness    Int       // Thickness of the drawing
  createdAt    DateTime  @default(now())
  // relationship
  whiteboard   Whiteboard @relation(fields: [whiteboardId], references: [id])
  whiteboardId String
}